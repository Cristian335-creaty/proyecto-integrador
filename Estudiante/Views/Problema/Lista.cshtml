@model List<Estudiante.Models.Problema>
<table class="table">
    <thead>
        <tr><th>ID</th><th>Título</th><th>Dificultad</th><th>Temas</th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Codigo</td>
                <td><a href="/Problema/Resolver/@p.Id">@p.Titulo</a></td>
                <td><span class="badge bg-@Color(p.Dificultad)">@p.Dificultad</span></td>
                <td>@p.Temas</td>
            </tr>
        }
    </tbody>
</table>

@functions {
    string Color(string d) => d switch
    {
        "Fácil" => "success",
        "Media" => "warning",
        "Difícil" => "danger",
        _ => "secondary"
    };
}