@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">CompetitiveCode</h1>
        <p class="lead">Plataforma de entrenamiento para programación competitiva</p>
    </div>

    <div class="row">
        <!-- Panel de usuario -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Tu Progreso</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar" role="progressbar" style="width: 65%;">65%</div>
                        </div>
                        <small class="text-muted">Nivel Intermedio</small>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Problemas resueltos
                            <span class="badge bg-success rounded-pill">128</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Competiciones
                            <span class="badge bg-info rounded-pill">14</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Ranking
                            <span class="badge bg-warning rounded-pill">#2,345</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Próximas Competiciones</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Maratón de Algoritmos #15</h6>
                                <small class="text-muted">2 días</small>
                            </div>
                            <p class="mb-1">Temas: Grafos, DP, Geometría</p>
                            <small>Duración: 3 horas</small>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Semanal Rápido #32</h6>
                                <small class="text-muted">5 días</small>
                            </div>
                            <p class="mb-1">Temas: Estructuras de datos</p>
                            <small>Duración: 1 hora</small>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Problemas Recomendados</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Título</th>
                                    <th>Dificultad</th>
                                    <th>Temas</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>PC-142</td>
                                    <td><a href="#">Camino más corto con restricciones</a></td>
                                    <td><span class="badge bg-warning">Media</span></td>
                                    <td>Grafos, Dijkstra</td>
                                </tr>
                                <tr>
                                    <td>PC-087</td>
                                    <td><a href="#">Subsecuencia palindrómica</a></td>
                                    <td><span class="badge bg-success">Fácil</span></td>
                                    <td>DP, Strings</td>
                                </tr>
                                <tr>
                                    <td>PC-205</td>
                                    <td><a href="#">Área máxima bajo histograma</a></td>
                                    <td><span class="badge bg-danger">Difícil</span></td>
                                    <td>Stack, Divide y vencerás</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de aprendizaje -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Tutoriales Recientes</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6>Árboles de Segmentos</h6>
                                    <p class="card-text small">Aprende a implementar y usar esta poderosa estructura para consultas de rango.</p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Ver tutorial</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6>Programación Dinámica</h6>
                                    <p class="card-text small">Domina los patrones comunes de DP con ejemplos prácticos.</p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Ver tutorial</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6>Flujo Máximo</h6>
                                    <p class="card-text small">Implementa el algoritmo de Ford-Fulkerson y sus variantes.</p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Ver tutorial</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
