@{
    ViewData["Title"] = "Panel de Administración";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-crown me-2"></i>@ViewData["Title"]</h2>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-chalkboard-teacher me-2"></i>Gestión de Profesores
                </div>
                <div class="card-body">
                    <p class="card-text">Crea y administra los profesores del sistema.</p>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-action="RegistrarProfesor" class="btn btn-primary">Crear Profesor</a>
                    <a asp-action="ListaUsuarios" class="btn btn-outline-secondary ms-2">Ver Todos</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <i class="fas fa-user-graduate me-2"></i>Gestión de Estudiantes
                </div>
                <div class="card-body">
                    <p class="card-text">Administra los estudiantes registrados.</p>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="#" class="btn btn-success">Ver Estudiantes</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-book me-2"></i>Gestión de Cursos
                </div>
                <div class="card-body">
                    <p class="card-text">Administra los cursos y asignaturas.</p>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="#" class="btn btn-info">Administrar Cursos</a>
                </div>
            </div>
        </div>
    </div>
</div>