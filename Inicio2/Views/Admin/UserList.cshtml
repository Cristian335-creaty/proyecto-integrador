@model IEnumerable<Inicio2.Models.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User List";
}

<style>
    .users-card {
        border-radius: 1.25rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.10);
        margin-top: 40px;
        margin-bottom: 40px;
        background: #fff;
    }

    .users-header {
        border-radius: 1.25rem 1.25rem 0 0 !important;
        background: linear-gradient(90deg, #2563eb 0%, #1e40af 100%);
        color: #fff;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .users-header i {
            font-size: 1.5rem;
        }

    .table thead th {
        background: #f1f5f9;
        color: #1e293b;
        font-weight: 600;
        border-top: none;
    }

    .table-hover tbody tr:hover {
        background-color: #f3f4f6;
    }

    .badge {
        font-size: 1rem;
        padding: 0.5em 1em;
        letter-spacing: 0.5px;
    }

    .badge-teacher {
        background: #2563eb;
        color: #fff;
    }

    .badge-student {
        background: #22c55e;
        color: #fff;
    }

    .badge-admin {
        background: #f59e42;
        color: #fff;
    }

    .btn-action {
        min-width: 90px;
    }

    .modal-confirm {
        color: #636363;
        width: 400px;
    }

        .modal-confirm .modal-content {
            padding: 20px;
            border-radius: 1rem;
            border: none;
        }

        .modal-confirm .modal-header {
            border-bottom: none;
            position: relative;
            justify-content: center;
        }

        .modal-confirm .close {
            position: absolute;
            top: 15px;
            right: 15px;
            color: #aaa;
            font-size: 24px;
            font-weight: normal;
            border: none;
            background: none;
        }

        .modal-confirm .modal-title {
            text-align: center;
            font-size: 1.5rem;
            margin: 0 auto;
        }

        .modal-confirm .modal-body {
            text-align: center;
            font-size: 1.1rem;
        }

        .modal-confirm .modal-footer {
            border: none;
            justify-content: center;
            gap: 1rem;
        }
</style>

<!-- Modal de confirmación -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-confirm">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmLabel"><i class="fas fa-exclamation-triangle text-danger me-2"></i>Confirm Delete</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">&times;</button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn"><i class="fas fa-trash-alt me-1"></i>Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="card users-card">
        <div class="card-header users-header">
            <i class="fas fa-users"></i>
            <h3 class="mb-0">User List</h3>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th><i class="fas fa-user"></i> Full Name</th>
                            <th><i class="fas fa-envelope"></i> Email</th>
                            <th><i class="fas fa-user-tag"></i> Role</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>
                                    @if (string.Equals(user.Role, "Admin", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge badge-admin">Admin</span>
                                    }
                                    else if (string.Equals(user.Role, "Teacher", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge badge-teacher">Teacher</span>
                                    }
                                    else if (string.Equals(user.Role, "Student", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge badge-student">Student</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@user.Role</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.Equals(user.Role, "Admin", StringComparison.OrdinalIgnoreCase))
                                    {
                                        @if (string.Equals(user.Role, "Teacher", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <a asp-controller="Admin" asp-action="EditTeacher" asp-route-id="@user.Id" class="btn btn-sm btn-warning btn-action me-1">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                        }
                                        else if (string.Equals(user.Role, "Student", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <a asp-controller="Admin" asp-action="EditStudent" asp-route-id="@user.Id" class="btn btn-sm btn-warning btn-action me-1">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                        }
                                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="delete-user-form" style="display:inline;">
                                            <button type="button" class="btn btn-sm btn-danger btn-action btn-delete-user">
                                                <i class="fas fa-trash-alt"></i> Delete
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not allowed</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let formToDelete = null;
        document.querySelectorAll('.btn-delete-user').forEach(btn => {
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                formToDelete = this.closest('form');
                var modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
                modal.show();
            });
        });

        document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
            if (formToDelete) {
                formToDelete.submit();
            }
        });
    </script>
}