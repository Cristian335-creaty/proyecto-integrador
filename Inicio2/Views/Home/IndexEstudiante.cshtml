@model ApplicationUser

@{
    ViewData["Title"] = "Panel del Estudiante";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">CompetitiveCode</h1>
        <p class="lead">Plataforma de entrenamiento para programación competitiva</p>
    </div>
    <div class="row">
        <!-- Panel de usuario -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Tu Progreso</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar" role="progressbar" style="width: 65%;">65%</div>
                        </div>
                        <small class="text-muted">Nivel Intermedio</small>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Problemas resueltos
                            <span class="badge bg-success rounded-pill">128</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Competiciones
                            <span class="badge bg-info rounded-pill">14</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Ranking
                            <span class="badge bg-warning rounded-pill">#2,345</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>


        <!-- Contenido principal -->
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Problemas Recomendados</h5>
                    <a href="/problema/lista" class="btn btn-sm btn-outline-primary">
                        Ver todos los problemas
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Título</th>
                                    <th>Dificultad</th>
                                    <th>Temas</th>
                                </tr>
                            </thead>
                            <!-- Aquí puedes agregar el listado de problemas si lo deseas -->
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de aprendizaje -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Tutoriales Recientes</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6>Árboles de Segmentos</h6>
                                    <p class="card-text small">Aprende a implementar y usar esta poderosa estructura para consultas de rango.</p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Ver tutorial</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6>Programación Dinámica</h6>
                                    <p class="card-text small">Domina los patrones comunes de DP con ejemplos prácticos.</p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Ver tutorial</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6>Flujo Máximo</h6>
                                    <p class="card-text small">Implementa el algoritmo de Ford-Fulkerson y sus variantes.</p>
                                    <a href="#" class="btn btn-sm btn-outline-primary">Ver tutorial</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
