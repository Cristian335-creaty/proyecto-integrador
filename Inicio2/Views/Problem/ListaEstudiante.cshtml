@model List<Inicio2.Models.Estudiantes.Problem>

@{
    ViewData["Title"] = "Available Challenges";
}

<style>
    .student-challenges-card {
        border-radius: 1.25rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.10);
        margin-top: 40px;
        margin-bottom: 40px;
    }

    .student-challenges-header {
        border-radius: 1.25rem 1.25rem 0 0 !important;
        background: linear-gradient(90deg, #2563eb 0%, #1e40af 100%);
        color: #fff;
    }

    .table thead th {
        background: #f1f5f9;
        color: #1e293b;
        font-weight: 600;
        border-top: none;
    }

    .table-hover tbody tr:hover {
        background-color: #f3f4f6;
    }
</style>

<div class="container">
    <div class="card student-challenges-card">
        <div class="card-header student-challenges-header d-flex align-items-center">
            <i class="fas fa-puzzle-piece me-2"></i>
            <h3 class="mb-0">Available Challenges</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag"></i> Code</th>
                            <th><i class="fas fa-heading"></i> Title</th>
                            <th><i class="fas fa-signal"></i> Difficulty</th>
                            <th><i class="fas fa-tags"></i> Topics</th>
                            <th><i class="fas fa-play-circle"></i> Solve</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.Code</td>
                                <td>@p.Title</td>
                                <td>
                                    <span class="badge bg-@Color(p.Difficulty)">
                                        @p.Difficulty
                                    </span>
                                </td>
                                <td>@p.Topics</td>
                                <td>
                                    <a asp-action="Solve" asp-route-id="@p.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-code"></i> Solve
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    string Color(string d) => d switch
    {
        "Fácil" => "success",
        "Media" => "warning",
        "Difícil" => "danger",
        _ => "secondary"
    };
}
